{
    "name": "dn_elevationprofile",
    "version": "2.1.1-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "productName": "devnet-mapapps-elevation-profile",
    "dependencies": {
        "@arcgis/core": "^4.33.8",
        "esri-widgets": "^4.11.0",
        "map-widget": "^4.11.0"
    },
    "CSS-Themes-Extension": [
        {
            "name": "*",
            "files": [
                "./css/styles.css"
            ]
        }
    ],
    "layout-widgets": [
        {
            "widgetRole": "elevationProfileWidget",
            "window": {
                "title": "${ui.windowTitle}",
                "closable": true,
                "minimizeOnClose": true,
                "maximizable": true,
                "resizable": true,
                "draggable": true,
                "marginBox": {
                    "l": 20,
                    "t": 140,
                    "w": 600,
                    "h": 435
                }
            }
        },
        {
            "widgetRole": "elevationProfileWidget",
            "sublayout": [
                "mobile_portrait"
            ],
            "window": {
                "resizable": false,
                "draggable": false,
                "marginBox": {
                    "w": "100%",
                    "h": "50%",
                    "b": 0
                }
            }
        },
        {
            "widgetRole": "elevationProfileWidget",
            "sublayout": [
                "mobile_landscape"
            ],
            "window": {
                "resizable": false,
                "draggable": false,
                "marginBox": {
                    "w": "50%",
                    "h": "100%",
                    "l": 0
                }
            }
        }
    ],
    "components": [
        {
            "name": "Config",
            "impl": "./ElevationProfileWidgetController",
            "provides": [
                "dn_elevationprofile.ElevationProfileWidgetController"
            ],
            "properties": {
                "startSketchOnOpen": false,
                "geodesicDistanceThreshold": 100000,
                "profiles": [
                    {
                        "type": "ground"
                    }
                ],
                "unit": "meters",
                "unitOptions": [
                    "meters",
                    "kilometers",
                    "feet"
                ],
                "visibleElements": {
                    "legend": true,
                    "chart": true,
                    "clearButton": true,
                    "settingsButton": true,
                    "sketchButton": true,
                    "selectButton": false,
                    "uniformChartScalingToggle": true
                }
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                }
            ]
        },
        {
            "name": "ElevationProfileToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "elevationProfileToggleTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "iconClass": "icon-chart-line",
                "activateHandler": "onToolActivated",
                "deactivateHandler": "onToolDeactivated",
                "toolRole": "toolset",
                "togglable": true,
                "noGroup": true
            },
            "references": [
                {
                    "name": "handlerScope",
                    "providing": "dn_elevationprofile.ElevationProfileWidgetController"
                }
            ]
        }
    ]
}
